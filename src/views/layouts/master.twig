{# ---- ‚≠ê Back to Top ‚Äî Professional ---- #}
{% if theme.settings.get('show_back_to_top', true) %}
    {% set btt_pos = theme.settings.get('back_to_top_position', 'right') %}
    <button class="najd-btt najd-btt--{{ btt_pos }}" id="najd-back-to-top" aria-label="ÿßŸÑÿπŸàÿØÿ© ŸÑŸÑÿ£ÿπŸÑŸâ">
