{% set layout = component.layout|default('horizontal') %}
{% set _pt = component.section_padding_top is defined and component.section_padding_top != '' ? component.section_padding_top : null %}
{% set _pb = component.section_padding_bottom is defined and component.section_padding_bottom != '' ? component.section_padding_bottom : null %}
{% set _spacing_style = (_pt is not null or _pb is not null) ? 'style="' ~ (_pt is not null ? 'padding-top:' ~ _pt ~ 'px;' : '') ~ (_pb is not null ? 'padding-bottom:' ~ _pb ~ 'px;' : '') ~ '"' : '' %}

<section class="najd-block najd-block--trust-badges {{ component.full_width is defined and component.full_width ? '' : 'container' }}" {{ _spacing_style }}>
    {% if component.title %}
        <div class="najd-block__header text-center mb-8">
            <h2 class="najd-block__title">{{ component.title }}</h2>
        </div>
    {% endif %}

    <div class="najd-trust-badges najd-trust-badges--{{ layout }}">
        {% for badge in component.badges %}
            <div class="najd-trust-badge">
                <div class="najd-trust-badge__icon">
                    {% if badge.image %}
                        <img src="{{ badge.image }}" alt="{{ badge.badge_title }}" loading="lazy">
                    {% elseif badge.icon %}
                        <i class="{{ badge.icon }}"></i>
                    {% else %}
                        <i class="sicon-shield-check"></i>
                    {% endif %}
                </div>
                <span class="najd-trust-badge__title">{{ badge.badge_title }}</span>
                {% if badge.description %}
                    <span class="najd-trust-badge__desc">{{ badge.description }}</span>
                {% endif %}
            </div>
        {% endfor %}
    </div>
</section>
