{# ============================================================
   About Store â€” 3 layout styles
   Layouts: side, fullwidth, split
   Fields: component.layout, .image, .title, .description,
           .btn_text, .btn_url
   ============================================================ #}

{% set about_layout = component.layout|default('side') %}
{% set _pt = component.section_padding_top is defined and component.section_padding_top != '' ? component.section_padding_top : null %}
{% set _pb = component.section_padding_bottom is defined and component.section_padding_bottom != '' ? component.section_padding_bottom : null %}
{% set _spacing_style = (_pt is not null or _pb is not null) ? 'style="' ~ (_pt is not null ? 'padding-top:' ~ _pt ~ 'px;' : '') ~ (_pb is not null ? 'padding-bottom:' ~ _pb ~ 'px;' : '') ~ '"' : '' %}

{% if about_layout == 'fullwidth' %}
    {# === Fullwidth: background image with text overlay === #}
    <section class="najd-block najd-block--about najd-about--fullwidth"
             {% if component.image %}style="background-image: url({{ component.image }})"{% endif %} {{ _spacing_style }}>
        <div class="najd-about--fullwidth__overlay"></div>
        <div class="container relative z-10">
            <div class="najd-about--fullwidth__content">
                {% if component.title %}
                    <h2 class="text-2xl lg:text-4xl font-bold mb-4 text-white">{{ component.title }}</h2>
                {% endif %}
                {% if component.description %}
                    <div class="text-sm leading-relaxed text-white opacity-80 mb-6 max-w-xl">
                        {{ component.description|raw }}
                    </div>
                {% endif %}
                {% if component.btn_text and component.btn_url %}
                    <a href="{{ component.btn_url }}" class="najd-btn najd-btn--primary">
                        {{ component.btn_text }}
                    </a>
                {% endif %}
            </div>
        </div>
    </section>

{% elseif about_layout == 'split' %}
    {# === Split: two equal halves === #}
    <section class="najd-block najd-block--about" {{ _spacing_style }}>
        <div class="najd-about--split">
            <div class="najd-about--split__image">
                {% if component.image %}
                    <img src="{{ component.image }}" alt="{{ component.title }}" loading="lazy">
                {% endif %}
            </div>
            <div class="najd-about--split__content">
                {% if component.title %}
                    <h2 class="text-2xl lg:text-3xl font-bold mb-4">{{ component.title }}</h2>
                {% endif %}
                {% if component.description %}
                    <div class="text-sm leading-relaxed opacity-70 mb-6">
                        {{ component.description|raw }}
                    </div>
                {% endif %}
                {% if component.btn_text and component.btn_url %}
                    <a href="{{ component.btn_url }}" class="najd-btn najd-btn--primary">
                        {{ component.btn_text }}
                    </a>
                {% endif %}
            </div>
        </div>
    </section>

{% else %}
    {# === Side (default): image + text side by side === #}
    <section class="najd-block najd-block--about {{ component.full_width is defined and component.full_width ? '' : 'container' }}" {{ _spacing_style }}>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
            {% if component.image %}
                <div class="najd-about__image overflow-hidden rounded-lg">
                    <img src="{{ component.image }}" alt="{{ component.title }}" loading="lazy" class="w-full h-auto object-cover">
                </div>
            {% endif %}
            <div class="najd-about__content">
                {% if component.title %}
                    <h2 class="text-2xl lg:text-3xl font-bold mb-4">{{ component.title }}</h2>
                {% endif %}
                {% if component.description %}
                    <div class="text-sm leading-relaxed opacity-70 mb-6">{{ component.description|raw }}</div>
                {% endif %}
                {% if component.btn_text and component.btn_url %}
                    <a href="{{ component.btn_url }}" class="najd-btn najd-btn--primary">{{ component.btn_text }}</a>
                {% endif %}
            </div>
        </div>
    </section>
{% endif %}
