{# ============================================================
   Brand/Partner Logos Section — NAJD PREMIUM
   Clean grid with subtle card backgrounds (Wokiee style)
   ============================================================ #}
{% set _pt = component.section_padding_top is defined and component.section_padding_top != '' ? component.section_padding_top : null %}
{% set _pb = component.section_padding_bottom is defined and component.section_padding_bottom != '' ? component.section_padding_bottom : null %}
{% set _spacing_style = (_pt is not null or _pb is not null) ? 'style="' ~ (_pt is not null ? 'padding-top:' ~ _pt ~ 'px;' : '') ~ (_pb is not null ? 'padding-bottom:' ~ _pb ~ 'px;' : '') ~ '"' : '' %}
{% if component.items|length %}
<section class="najd-block najd-block--brands py-12 lg:py-16" {{ _spacing_style }}>
    <div class="{{ component.full_width is defined and component.full_width ? '' : 'container' }}">
        {% if component.title %}
            <div class="najd-block__header text-center mb-10">
                <div class="najd-block__eyebrow">{{ component.eyebrow is defined and component.eyebrow ? component.eyebrow : 'شركاؤنا' }}</div>
                <h2 class="najd-block__title">{{ component.title }}</h2>
            </div>
        {% endif %}

        <div class="najd-brands-grid">
            {% for item in component.items %}
                {% if item.url %}
                    <a href="{{ item.url }}" class="najd-brands-grid__item glass-surface" target="_blank" rel="noopener noreferrer" title="{{ item.name }}">
                        <img src="{{ item.image }}" alt="{{ item.name }}" loading="lazy" class="najd-brands-grid__logo">
                    </a>
                {% else %}
                    <div class="najd-brands-grid__item glass-surface" title="{{ item.name }}">
                        <img src="{{ item.image }}" alt="{{ item.name }}" loading="lazy" class="najd-brands-grid__logo">
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}
