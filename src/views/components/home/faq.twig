{# ============================================================
   FAQ â€” 3 layout styles
   Layouts: accordion, cards, side
   Fields: component.layout, .title, component.items[].question, .answer
   ============================================================ #}

{% set faq_layout = component.layout|default('accordion') %}

{% if faq_layout == 'side' %}
    {# === Side: title left, questions right === #}
    <section class="najd-block najd-block--faq container">
        <div class="grid grid-cols-1 lg:grid-cols-5 gap-8 lg:gap-12">
            <div class="lg:col-span-2">
                {% if component.title %}
                    <h2 class="text-2xl lg:text-3xl font-bold mb-4">{{ component.title }}</h2>
                {% endif %}
                <p class="text-sm opacity-60 leading-relaxed">{{ trans('common.elements.faq_desc') }}</p>
            </div>
            <div class="lg:col-span-3">
                {% for item in component.items %}
                    <details class="najd-faq__item mb-3">
                        <summary class="najd-faq__question">
                            <span>{{ item.question }}</span>
                            <i class="sicon-keyboard-arrow-down najd-faq__icon"></i>
                        </summary>
                        <div class="najd-faq__answer">{{ item.answer|raw }}</div>
                    </details>
                {% endfor %}
            </div>
        </div>
    </section>

{% elseif faq_layout == 'cards' %}
    {# === Cards: each Q&A in a separate card === #}
    <section class="najd-block najd-block--faq container">
        {% if component.title %}
            <div class="najd-block__header text-center mb-8">
                <h2 class="text-2xl font-bold">{{ component.title }}</h2>
            </div>
        {% endif %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {% for item in component.items %}
                <div class="najd-faq-card">
                    <h3 class="font-bold text-base mb-3">{{ item.question }}</h3>
                    <p class="text-sm opacity-60 leading-relaxed">{{ item.answer|raw }}</p>
                </div>
            {% endfor %}
        </div>
    </section>

{% else %}
    {# === Accordion (default) === #}
    <section class="najd-block najd-block--faq container">
        {% if component.title %}
            <div class="najd-block__header text-center mb-8">
                <h2 class="text-2xl font-bold">{{ component.title }}</h2>
            </div>
        {% endif %}
        <div class="najd-faq max-w-3xl mx-auto">
            {% for item in component.items %}
                <details class="najd-faq__item mb-3">
                    <summary class="najd-faq__question">
                        <span>{{ item.question }}</span>
                        <i class="sicon-keyboard-arrow-down najd-faq__icon"></i>
                    </summary>
                    <div class="najd-faq__answer">{{ item.answer|raw }}</div>
                </details>
            {% endfor %}
        </div>
    </section>
{% endif %}
