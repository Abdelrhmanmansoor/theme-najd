{# Inline Newsletter â€” Full-width bar #}
{% set has_gradient = component.bg_gradient_start and component.bg_gradient_end %}
{% set _pt = component.section_padding_top is defined and component.section_padding_top != '' ? component.section_padding_top : null %}
{% set _pb = component.section_padding_bottom is defined and component.section_padding_bottom != '' ? component.section_padding_bottom : null %}
{% set _spacing_style = (_pt is not null or _pb is not null) ? 'style="' ~ (_pt is not null ? 'padding-top:' ~ _pt ~ 'px;' : '') ~ (_pb is not null ? 'padding-bottom:' ~ _pb ~ 'px;' : '') ~ '"' : '' %}
<section class="najd-block najd-block--newsletter-inline najd-newsletter-inline"
    style="{% if has_gradient %}background: linear-gradient(135deg, {{ component.bg_gradient_start }}, {{ component.bg_gradient_end }});{% endif %}{% if component.bg_image %}background-image: url('{{ component.bg_image }}'); background-size: cover; background-position: center;{% endif %}" {{ _spacing_style }}>
    <div class="{{ component.full_width is defined and component.full_width ? '' : 'container' }}">
        <div class="najd-newsletter-inline__inner">
            <div class="najd-newsletter-inline__text">
                {% if component.title %}
                    <h2 class="najd-newsletter-inline__title">{{ component.title }}</h2>
                {% endif %}
                {% if component.subtitle %}
                    <p class="najd-newsletter-inline__subtitle">{{ component.subtitle }}</p>
                {% endif %}
            </div>
            <div class="najd-newsletter-inline__form">
                <salla-newsletter></salla-newsletter>
            </div>
        </div>
    </div>
</section>
