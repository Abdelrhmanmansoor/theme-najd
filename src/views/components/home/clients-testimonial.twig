{# Clients / Partners Testimonial #}
{% set _pt = component.section_padding_top is defined and component.section_padding_top != '' ? component.section_padding_top : null %}
{% set _pb = component.section_padding_bottom is defined and component.section_padding_bottom != '' ? component.section_padding_bottom : null %}
{% set _spacing_style = (_pt is not null or _pb is not null) ? 'style="' ~ (_pt is not null ? 'padding-top:' ~ _pt ~ 'px;' : '') ~ (_pb is not null ? 'padding-bottom:' ~ _pb ~ 'px;' : '') ~ '"' : '' %}
<section class="najd-block najd-block--clients {{ component.full_width is defined and component.full_width ? '' : 'container' }}" {{ _spacing_style }}>
    {% if component.title %}
        <div class="najd-block__header mb-8">
            <h2 class="najd-block__title">{{ component.title }}</h2>
        </div>
    {% endif %}

    <div class="najd-clients grid grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-6">
        {% for client in component.clients %}
            <div class="najd-clients__item">
                <img src="{{ client.logo }}" alt="{{ client.name|default('') }}" loading="lazy" class="najd-clients__logo">
                {% if client.testimonial %}
                    <div class="najd-clients__tooltip">
                        <p class="najd-clients__quote">{{ client.testimonial }}</p>
                        {% if client.name %}
                            <span class="najd-clients__name">â€” {{ client.name }}</span>
                        {% endif %}
                    </div>
                {% endif %}
            </div>
        {% endfor %}
    </div>
</section>
