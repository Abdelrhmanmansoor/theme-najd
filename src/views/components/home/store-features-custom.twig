{# ============================================================
   Store Features â€” Image or Icon + title + description grid
   Fields: component.items[].image, .icon, .title, .text
   Supports uploaded images (auto-arranged) or Salla icons
   ============================================================ #}

<section class="najd-block najd-block--features">
    <div class="container">
        <div class="najd-features glass-surface rounded-glass">
            <div class="grid grid-cols-2 md:grid-cols-{{ component.items|length > 4 ? '4' : component.items|length }} gap-0">
                {% for item in component.items %}
                    <div class="najd-features__item">
                        {# Image takes priority over icon #}
                        {% if item.image %}
                            <div class="najd-features__image">
                                <img src="{{ item.image }}" alt="{{ item.title }}" loading="lazy">
                            </div>
                        {% elseif item.icon %}
                            <i class="{{ item.icon }} najd-features__icon"></i>
                        {% endif %}
                        {% if item.title %}
                            <h3 class="najd-features__title">{{ item.title }}</h3>
                        {% endif %}
                        {% if item.text %}
                            <p class="najd-features__text">{{ item.text }}</p>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>
