{# ============================================================
   Blog Section — Latest blog posts
   Fields: component.title, component.count
   ============================================================ #}
{% set _pt = component.section_padding_top is defined and component.section_padding_top != '' ? component.section_padding_top : null %}
{% set _pb = component.section_padding_bottom is defined and component.section_padding_bottom != '' ? component.section_padding_bottom : null %}
{% set _spacing_style = (_pt is not null or _pb is not null) ? 'style="' ~ (_pt is not null ? 'padding-top:' ~ _pt ~ 'px;' : '') ~ (_pb is not null ? 'padding-bottom:' ~ _pb ~ 'px;' : '') ~ '"' : '' %}

<section class="najd-block najd-block--blog {{ component.full_width is defined and component.full_width ? '' : 'container' }}" {{ _spacing_style }}>
    {% if component.title %}
        <div class="najd-block__header mb-8">
            <div>
                <div class="najd-block__eyebrow" style="justify-content:flex-start;">
                    {{ component.eyebrow is defined and component.eyebrow ? component.eyebrow : 'المدونة' }}
                </div>
                <h2 class="najd-block__title mt-2">{{ component.title }}</h2>
            </div>
            <a href="{{ link('blog') }}" class="najd-block__link">
                {{ trans('blocks.home.display_all') }}
            </a>
        </div>
    {% endif %}

    <salla-blog-posts count="{{ component.count ? component.count : 4 }}"></salla-blog-posts>
</section>
