{# Single Blog Post #}
{% extends "layouts.master" %}
{% block content %}
    <div class="container py-8 lg:py-12 max-w-4xl mx-auto">
        {% if theme.settings.get('enable_breadcrumb', true) %}
            <salla-breadcrumb></salla-breadcrumb>
        {% endif %}
        <article class="glass-surface rounded-glass p-8 lg:p-12">
            <h1 class="text-2xl lg:text-3xl font-bold mb-4">{{ post.title }}</h1>
            <div class="flex items-center gap-4 text-sm opacity-60 mb-8">
                <span>{{ post.date|date("d/m/Y") }}</span>
                {% if post.author %}<span>{{ post.author }}</span>{% endif %}
            </div>
            {% if post.image %}
                <img src="{{ post.image }}" alt="{{ post.title }}" class="w-full rounded-lg mb-8" loading="eager">
            {% endif %}
            <div class="prose max-w-none leading-relaxed" style="color: var(--text-secondary);">
                {{ post.content|raw }}
            </div>
        </article>
        <salla-social-share class="mt-8"></salla-social-share>
    </div>
{% endblock %}
