{% extends "layouts.master" %}

{% block content %}
    <div class="container py-8 lg:py-16">
        {% if theme.settings.get('enable_breadcrumb', true) %}
            <salla-breadcrumb></salla-breadcrumb>
        {% endif %}

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16">
            {# ===== Product Images ===== #}
            <div class="najd-product-gallery glass-card p-3 lg:p-4">
                <salla-slider type="thumbs" id="product-images-slider">
                    <div slot="items">
                        {% for image in product.images %}
                            <div class="swiper-slide">
                                <img src="{{ image.url }}"
                                     alt="{{ product.name }}"
                                     class="w-full rounded-xl object-{{ theme.settings.get('slider_background_size', 'cover') }}"
                                     loading="{{ loop.first ? 'eager' : 'lazy' }}">
                            </div>
                        {% endfor %}
                    </div>
                </salla-slider>
            </div>

            {# ===== Product Details ===== #}
            <div class="najd-product-details">
                {# Category #}
                {% if theme.settings.get('show_product_category', true) and product.category %}
                    <a href="{{ product.category.url }}"
                       class="inline-block text-xs font-bold uppercase tracking-wider mb-3 px-3 py-1 rounded-full"
                       style="background: color-mix(in srgb, var(--color-primary) 10%, transparent); color: var(--color-primary);">
                        {{ product.category.name }}
                    </a>
                {% endif %}

                {# Name #}
                <h1 class="text-2xl lg:text-4xl font-extrabold mb-4 leading-tight" style="letter-spacing: -0.02em;">
                    {{ product.name }}
                </h1>

                {# Rating #}
                {% if store.settings.rating_enabled %}
                    <div class="mb-4">
                        <salla-rating-stars value="{{ product.rating.stars }}" reviews-count="{{ product.rating.count }}"></salla-rating-stars>
                    </div>
                {% endif %}

                {# Price #}
                <div class="najd-product-price my-6 pb-6" style="border-bottom: 1px solid var(--border-color);">
                    <salla-product-price product-id="{{ product.id }}"></salla-product-price>
                </div>

                {# Description #}
                {% if product.description %}
                    <div class="text-sm leading-relaxed mb-6" style="color: var(--text-secondary);">
                        {{ product.description|raw }}
                    </div>
                {% endif %}

                {# Options #}
                {% if product.options|length %}
                    {% include 'pages.partials.product.options' %}
                {% endif %}

                {# Size Chart Button #}
                {% if theme.settings.get('size_chart_enabled', false) and theme.settings.get('size_chart_image') %}
                    <button class="najd-btn najd-btn--ghost najd-btn--sm mb-4"
                            onclick="document.getElementById('najd-size-chart-modal').style.display='flex'">
                        <i class="sicon-ruler rtl:ml-2 ltr:mr-2"></i>
                        {{ trans('common.elements.size_chart') }}
                    </button>
                {% endif %}

                {# Quantity + Add to Cart #}
                <div class="flex items-center gap-4 my-8" id="najd-add-to-cart-section">
                    <salla-quantity-input product-id="{{ product.id }}" max="{{ product.max_quantity }}"></salla-quantity-input>
                    <salla-add-product-button product-id="{{ product.id }}" class="flex-1">
                        {{ trans('common.elements.add_to_cart') }}
                    </salla-add-product-button>
                </div>

                {# Back-in-Stock Alert (for out-of-stock products) #}
                {% if theme.settings.get('back_to_stock_enabled', true) and not product.is_available %}
                    <div class="najd-back-in-stock p-4 rounded-2xl mb-6" style="background: var(--surface-secondary); border: 1px solid var(--border-color);">
                        <p class="text-sm font-semibold mb-3" style="color: var(--text-primary);">
                            <i class="sicon-bell rtl:ml-2 ltr:mr-2" style="color: var(--color-primary);"></i>
                            {{ trans('common.elements.notify_availability') }}
                        </p>
                        <salla-add-product-button product-id="{{ product.id }}" type="notify">
                            {{ trans('common.elements.notify_me') }}
                        </salla-add-product-button>
                    </div>
                {% endif %}

                {# Installment #}
                <salla-installment product-id="{{ product.id }}"></salla-installment>

                {# Payment Methods #}
                {% if theme.settings.get('show_payment_methods', true) %}
                    <div class="mt-6 p-4 rounded-2xl" style="background: var(--surface-secondary); border: 1px solid var(--border-color);">
                        <salla-payments product-page></salla-payments>
                    </div>
                {% endif %}

                {# Tags #}
                {% if theme.settings.get('show_tags', true) and product.tags|length %}
                    <div class="flex flex-wrap gap-2 mt-6">
                        {% for tag in product.tags %}
                            <a href="{{ tag.url }}" class="najd-btn najd-btn--ghost najd-btn--sm">
                                {{ tag.name }}
                            </a>
                        {% endfor %}
                    </div>
                {% endif %}

                {# Share #}
                <div class="mt-8 pt-6" style="border-top: 1px solid var(--border-color);">
                    <salla-social-share></salla-social-share>
                </div>
            </div>
        </div>

        {# Store Features on Product #}
        {% if theme.settings.get('show_store_features_on_product', true) %}
            <div class="mt-16">
                {% component 'home.store-features-custom' %}
            </div>
        {% endif %}

        {# Related Products #}
        <div class="mt-16">
            <salla-products-slider source="related" source-value="{{ product.id }}"
                                   block-title="{{ trans('blocks.home.display_all') }}"
                                   slider-id="related-products">
            </salla-products-slider>
        </div>
    </div>

    {# ===== Size Chart Modal ===== #}
    {% if theme.settings.get('size_chart_enabled', false) and theme.settings.get('size_chart_image') %}
        <div class="najd-size-chart-modal" id="najd-size-chart-modal" style="display:none"
             onclick="if(event.target===this)this.style.display='none'">
            <div class="najd-size-chart-modal__content glass-surface">
                <button class="najd-size-chart-modal__close"
                        onclick="this.closest('.najd-size-chart-modal').style.display='none'">
                    <i class="sicon-cancel"></i>
                </button>
                <h3 class="text-lg font-bold mb-4">{{ trans('common.elements.size_chart') }}</h3>
                <img src="{{ theme.settings.get('size_chart_image') }}" alt="Size Chart" class="w-full rounded-xl" loading="lazy">
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block scripts %}
    <script defer src="{{ 'product.js' | asset }}"></script>
{% endblock %}
